<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="465.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HelpWindowController">
   <children>
      <MenuBar fx:id="menuBar" layoutY="1.0" prefHeight="26.0" prefWidth="700.0">
        <menus>
          <Menu fx:id="menu" mnemonicParsing="false" text="Windows">
            <items>
              <MenuItem fx:id="item1" mnemonicParsing="false" onAction="#changeHelpText1" text="Game Store" />
                  <MenuItem fx:id="item2" mnemonicParsing="false" onAction="#changeHelpText2" text="Your Cart" />
                  <MenuItem fx:id="item3" mnemonicParsing="false" onAction="#changeHelpText3" text="Review Game" />
                  <MenuItem fx:id="item4" disable="true" mnemonicParsing="false" onAction="#changeHelpText4" visible="false" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TextArea fx:id="info" editable="false" layoutY="27.0" prefHeight="437.0" prefWidth="700.0" promptText="Choose the window you need information of in the menu above." />
   </children>
</AnchorPane>
