            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" onAction="#modifyGame" text="Modify Game" />
                  <MenuItem mnemonicParsing="false" onAction="#deleteGame" text="Delete Game" />
              </items>
            </ContextMenu>
         </contextMenu>
        </TableView>
        <Label layoutX="25.0" layoutY="480.0" prefHeight="17.0" prefWidth="100.0" text="Search game:" />
        <TextField fx:id="textFieldSearch" layoutX="116.0" layoutY="475.0" prefHeight="25.0" prefWidth="200.0" promptText="Game name..." />
        <Label layoutX="320.0" layoutY="480.0" prefHeight="17.0" prefWidth="60.0" text="Genre:" />
        <TextField fx:id="textFieldGenre" layoutX="380.0" layoutY="475.0" prefHeight="25.0" prefWidth="120.0" promptText="All" />
