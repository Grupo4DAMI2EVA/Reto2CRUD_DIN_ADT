        <Label layoutX="25.0" layoutY="80.0" prefHeight="25.0" prefWidth="200.0" style="-fx-font-weight: bold;" text="Available Games" />
        <TableView id="tableViewGames" fx:id="tableViewGames" layoutX="21.0" layoutY="115.0" prefHeight="350.0" prefWidth="872.0">
            <columns>
                <TableColumn fx:id="colTitle" onEditStart="#getSelectedTableItem" prefWidth="250.0" text="Title" />
